[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/top]
width = 100%
height = 25
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}
module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = "Symbola;1"

modules-left = bspwm
modules-center = title
modules-right = volume battery date
tray-position = right
tray-padding = 2

[module/bspwm]
type = internal/bspwm

ws-icon-0 = 1;1
